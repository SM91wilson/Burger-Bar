<h1>Burger Eats</h1>

<div class="container toEat">
  <h2>Burgers:</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger/burger devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="container">
  <img src="/assets/4728.png" alt="cartoon burger"/>
</div>

<div class="container eaten">
  <h2>Burgers that are devoured:</h2>
  <ul class='eaten'>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger/burger devoured=true}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<h2 class="add d-flex">Add a Burger</h2>


<form class="add">
  <div class='d-flex addForm'>
    <h2>
      <label >Burger Name:</label>
    </h2>
    <input type="text" id="newBurger" name="burgerName">
    <input type="submit" value="submit" class="btn-danger">
  </div>
</form>